<%= show_for @game do |a| %>
  <%= a.attribute :game_date %>
  <%= a.attribute :number_playing %>
  <%= a.association :game_status, :using => :description %>
  <%= content_tag :label, 'Playing' %>
  <br>
  <ul>
    <% @game.playing_players.each do |gp| %>
      <%= content_tag :li, gp.name_with_status %>
    <% end %>
  </ul>
<% end %>

<% if admin? %>
  <%= link_to 'Edit', edit_game_path(@game), :class => 'button' %>
<% end %>