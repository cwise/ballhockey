/* "Winter Blues" CSS theme for CSS Table Gallery (http://icant.co.uk/csstablegallery/) by Gunta Klavina (http://www.klavina.com) */

body {
    background-color: #ffffff;
    margin: 15px 25px;
    font-family: 'Trebuchet MS', 'Lucida Grande',
    Verdana, Lucida, Geneva, Helvetica,
    Arial, sans-serif;
    background-image: url("/images/hockey.png");
    background-repeat: repeat;
}

table {font: 85% "Lucida Grande", "Lucida Sans Unicode", "Trebuchet MS", sans-serif;padding: 0; margin: 0; border-collapse: collapse; color: #333; background: #F3F5F7;}

table a {color: #3A4856; text-decoration: none; border-bottom: 1px solid #C6C8CB;}

table a:visited {color: #777;}

table a:hover {color: #000;}

table caption {text-align: left; text-transform: uppercase;  padding-bottom: 10px; font: 200% "Lucida Grande", "Lucida Sans Unicode", "Trebuchet MS", sans-serif;}

table thead th {background: #3A4856; padding: 15px 10px; color: #fff; text-align: left; font-weight: normal;}

table tbody, table thead {border-left: 1px solid #EAECEE; border-right: 1px solid #EAECEE;}

table tbody {border-bottom: 1px solid #EAECEE;}

table tbody td, table tbody th {padding: 10px; text-align: left;}

table tbody td[eliminated=true] {color:silver;}

table tbody tr {background: #F3F5F7;}

table tbody tr.odd {background: #F0F2F4;}

table tbody  tr:hover {background: #EAECEE; color: #111;}

table tfoot td, table tfoot th, table tfoot tr {text-align: left; font: 120%  "Lucida Grande", "Lucida Sans Unicode", "Trebuchet MS", sans-serif; text-transform: uppercase; background: #fff; padding: 10px;}

.link_button ul {
    margin: 0;
    padding: 0;
    border: none;
}

.link_button li {
    border-right: 10px solid #fff;
    font-size: smaller;
    list-style: none;
    display: inline;
}

.link_button li a {
    padding: 5px 5px 5px 0.5em;
    border: 1px solid;
    background-color: #ff0000;
    background: #DDE;
    text-decoration: none;
}

.link_button li a:hover {
    background-color: #2586d7;
    color: #fff;
}


.murmur_pagination {
    background: white;
/* self-clearing method: */ }

.murmur_pagination a, .murmur_pagination span {
    padding: .2em .5em;
    display: block;
    float: left;
    margin-right: 1px; }

.murmur_pagination span.disabled {
    color: #999;
    border: 1px solid #DDD; }

.murmur_pagination span.current {
    font-weight: bold;
    background: red;
    color: white;
    border: 1px solid #690b01; }

.murmur_pagination a {
    text-decoration: none;
    color: red;
    border: 1px solid #e7dba1; }

.murmur_pagination a:hover, .murmur_pagination a:focus {
    color: #003;
    border-color: #003; }

.murmur_pagination .page_info {
    background: #01A33E;
    color: white;
    padding: .4em .6em;
    width: 22em;
    margin-bottom: .3em;
    text-align: center; }

.murmur_pagination .page_info b {
    color: #003;
    background: #6aa6ed;
    padding: .1em .25em; }

.murmur_pagination:after {
    content: ".";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden; }

* html .murmur_pagination {
    height: 1%; }

*:first-child+html .murmur_pagination {
    overflow: hidden; }
}